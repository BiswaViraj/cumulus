{
  "name": "@cumulus/api-client",
  "version": "1.21.0",
  "description": "API client for working with the Cumulus archive API",
  "keywords": [
    "GIBS",
    "CUMULUS",
    "NASA"
  ],
  "engines": {
    "node": ">=10.16.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/nasa/cumulus/tree/master/packages/api-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa/cumulus"
  },
  "scripts": {
    "build": "true",
    "lint": "eslint .",
    "test": "ava",
    "test-coverage": "nyc ava",
    "test-ci": "npm run lint"
  },
  "ava": {
    "files": [
      "tests/**"
    ],
    "verbose": true
  },
  "nyc": {
    "exclude": [
      "tests",
      "test"
    ]
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/aws-client": "1.21.0",
    "@cumulus/json-logger": "1.21.0",
    "p-retry": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^2.1.0",
    "nyc": "^14.0.0",
    "rewire": "^4.0.1"
  }
}
